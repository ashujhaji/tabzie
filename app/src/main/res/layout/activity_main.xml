<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp" />

    <com.pixerapps.tabzie.TabLayout
        android:id="@+id/mainTab"
        android:layout_width="match_parent"
        android:layout_height="@dimen/forty_five_dp"
        android:layout_gravity="bottom"
        android:layout_margin="@dimen/ten_dp"
        android:background="@color/white"
        app:siIndicatorColor="@android:color/holo_blue_bright"
        app:siSelectedTextColor="@color/colorPrimary"
        app:siTextColor="@color/light_smoke"
        app:siTextSize="@dimen/eleven_sp" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>